<style>
.demo-card-square.mdl-card {
  width: 320px;
  height: 320px;
}
.demo-card-square > .mdl-card__title {
  color: #fff;
  background:
    url('../assets/images/obama.png') bottom right 15% no-repeat #46B6AC;
}
</style>


<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col">

      <div class="demo-card-square mdl-card mdl-shadow--2dp">
          <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text">Add Score</h2>
          </div>
          <div class="mdl-card__supporting-text">
            

                <%= form_for [@game, @result], html: {id: "form-results"} do |f| %>
                  <%= f.error_messages %>

                  <% @result.teams.each.with_index do |team, index| %>
                    <%= select "result[teams][#{index}]", "players", player_options, {include_blank: ''}, class: "players", multiple: @game.max_number_of_players_per_team != 1, "data-placeholder" => "Team #{index + 1}" %>

                    <% if index != @result.teams.size - 1 %>
                      <% if @game.allow_ties %>
                        <%= select "result[teams][#{index}]", :relation, ["defeats", "ties"], {} %>
                      <% else %>
                        <%= hidden_field_tag "result[teams][#{index}][relation]", :defeats, {} %>
                        <br>Defeats:<br>
                      <% end %>
                    <% end %>
                  <% end %>

                  <div class='form-actions'><br>
                    <%= f.submit class: "btn btn-primary", value: 'Save Result' %><br>
                  </div>
                <% end %>

                <%= javascript_tag do %>
                  $(".players").chosen();
                <% end %>


          </div>
          <div class="mdl-card__actions mdl-card--border">
            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="https://wm-pingpong.herokuapp.com/games/4">
              Submit Score
            </a>
          </div>
      </div>
  </div>
</div>

