<style>
.demo-card-square.mdl-card {
  width: 320px;
  height: 320px;
}
.demo-card-square > .mdl-card__title {
  color: #fff;
  background:
    url('../assets/images/obama.png') bottom right 15% no-repeat #46B6AC;
}
</style>

<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col">

        <div class="demo-card-square mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">Add New Player</h2>
      </div>
      <div class="mdl-card__supporting-text">


        <%= form_for @player, html: {class: "form-horizontal"} do |f| %>
          <%= f.error_messages %>

          
          <div class="control-group">
            <%= f.label :name, class: "control-label" %>
            <div class="controls">
              <%= f.text_field :name, class: "input-xlarge" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :email, class: "control-label" %>
            <div class="controls">
              <%= f.text_field :email, class: "input-xlarge" %>
            </div>
          </div>

          <small class="description attribution">
            Avatars loaded automatically by <a href="http://gravatar.com/">Gravatar</a>, a global avatar service. Work emails are used for creation, if work email is found to have an image it will load automatically.
          </small>


      </div>
      <div class="mdl-card__actions mdl-card--border">

          <div class="form-actions">
            <%= f.submit class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
          </div>

        <% end %>

      </div>
        </div>
  </div>
</div>